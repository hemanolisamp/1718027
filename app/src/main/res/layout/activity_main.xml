<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/startred"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/utama"
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:background="@color/startred">

        <LinearLayout
            android:id="@+id/mark"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:background="@drawable/board"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto"
                android:layout_width="99dp"
                android:layout_height="106dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="200dp"
                android:src="@drawable/rey" />

            <LinearLayout
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="REYNALDO FERDIAN SAPUTRA"
                android:textColor="#030303"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jurusan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Informatic Engineering">

            </TextView>

            <TextView
                android:id="@+id/itn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="ITN malang"
                android:textSize="12dp">

            </TextView>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/f"
            android:layout_width="144dp"
            android:layout_height="135dp"
            android:layout_gravity="right"
            android:layout_marginTop="400dp"
            android:src="@drawable/f" />

        <TextView
            android:id="@+id/k_f"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="5K"
            android:textStyle="bold"
            android:layout_marginStart="59dp"
            android:gravity="left"
            android:layout_marginTop="510dp"/>

        <TextView
            android:id="@+id/fol_f"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="followers"
            android:layout_marginStart="49dp"
            android:gravity="left"
            android:layout_marginTop="550dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/i"
            android:layout_width="2000dp"
            android:layout_height="121dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/i" />

        <TextView
            android:id="@+id/k_i"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="45rb"
            android:textStyle="bold"
            android:layout_marginStart="180dp"
            android:gravity="left"
            android:layout_marginTop="510dp"/>

        <TextView
            android:id="@+id/fol_i"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="180dp"
        android:layout_marginTop="392dp"
        android:gravity="fill"
        android:text="followers" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tw"
            android:layout_width="228dp"
            android:layout_height="136dp"
            android:layout_marginStart="279dp"
            android:layout_marginTop="400dp"
            android:src="@drawable/t" />

        <TextView
            android:id="@+id/k_tw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="5rb"
            android:textStyle="bold"
            android:layout_marginStart="319dp"
            android:gravity="left"
            android:layout_marginTop="510dp"/>

        <TextView
            android:id="@+id/fol_tw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="315dp"
            android:layout_marginTop="392dp"
            android:gravity="fill"
            android:text="followers" />

    </RelativeLayout>
</LinearLayout>